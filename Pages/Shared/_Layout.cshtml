@{
    string NavbarDateTime = DateTime.Now.ToString("dddd, dd MMMM yyyy");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <meta name="generator" content="Microsoft Visual Studio Code" />
    <meta name="author" content="Eric Lacroix" />
    <meta name="robots" content="INDEX,FOLLOW" />
    @RenderSection("metatags", required: false)

    <link rel="icon" href="~/images/icon/favicon.ico" type="image/x-icon" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/mail.css" rel="stylesheet" />
    <script src="~/js/html5shiv.js"></script>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <title>@Model.PageTitle</title>
</head>
<body class="background">

<div id="wrapper">
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <a class="navbar-brand" href="~/"><img src="~/images/logo/rslogo.png" alt="Resident System logo" height="60" width="220" /></a>
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Index">Home<span class="sr-only">(current)</span></a>
                    </li>
                </ul>

                <span class="navbar-text time">
                    @NavbarDateTime
                </span>

                <form class="form-inline my-2 my-lg-0" action="https://www.google.com/search" method="get" target="_blank">
                    <input class="form-control mr-sm-2" type="text" name="q" size="31" value="" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Google Search</button>
                </form>
            </div>
        </nav>
    </header>

    <main id="main">
        @RenderBody()
    </main>

    <footer id="footer">
        <nav class="navbar navbar-expand-lg navbar-custom navbar-fixed-bottom">
            <a class="navbar-brand" href="~/"><img src="~/images/logo/rslogofooter.png" alt="Resident System logo" height="60" width="220" /></a>
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Index">Home<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container-fluid footer">
            <section class="row">
                <article class="col-sm-12 col-md-12 col-lg-3">
                    <div class="footer-menu">
                        <p>&copy; Copyright @DateTime.Now.Year, Powered by @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</p>
                    </div>
                </article>
            </section>
        </div>
    </footer>

</div>

    @RenderSection("Scripts", required: false)
</body>
</html>